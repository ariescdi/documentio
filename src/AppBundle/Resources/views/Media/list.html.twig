{% extends '::base.html.twig' %}

{% block title %}Liste des médias{% endblock %}

{% block body -%}

    <h1>Liste des médias</h1>

        <div>
            {% for entity in entities %}
                <div class="panel panel-primary">
                    <div class="panel-heading"><h4><a style="color:white!important" href="{{ path('document_show', { 'slug': entity.slug }) }}">{{ entity.name }}</a> <span class="badge">{{ entity.mark }}</span></h4></div>
                    <div class="panel-body">
                        <div class="col-xs-3">Catégorie : {{ entity.category.name }}</div>
                        <div class="col-xs-3">Type de fichier : {{ entity.type.name }}</div>
                        <div class="col-xs-3">{% if entity.creationdate %}<i class="glyphicon glyphicon-calendar"></i> {{ entity.creationdate|date('Y-m-d') }}{% endif %}</div>
                        <div class="col-xs-3"><a href="mailto:{{ entity.owner.email }}"><i class="glyphicon glyphicon-user"></i>{{ entity.owner.username }}</a></div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {{ knp_pagination_render(entities) }}

    {% endblock %}
