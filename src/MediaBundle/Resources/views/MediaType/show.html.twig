{% extends '::base_admin.html.twig' %}

{% block body -%}
    <h1>Type de média</h1>

    <table class="record_properties table table-hover" data-sort-name="name" data-sort-order="id">
        <tbody>
            <tr>
                <th data-field="name" data-align="right" data-sortable="true">Nom</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th data-field="ext" data-align="right" data-sortable="true">Extension</th>
                <td>{{ entity.ext }}</td>
            </tr>
            <tr>
                <th data-field="comment" data-align="right" data-sortable="true">Commentaire</th>
                <td>{{ entity.comment }}</td>
            </tr>
            <tr>
                <th data-field="mimetype" data-align="right" data-sortable="true">Mimetype</th>
                <td>{{ entity.mimetype }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-toolbar">
        <div class="btn-group">
            <div class="btn btn-default">
                <a href="{{ path('mediatype_edit', { 'id': entity.id }) }}">
                    <i class="glyphicon glyphicon-edit"></i> Editer
                </a>
            </div>
            <div class="btn btn-default">
                <a href="{{ path('mediatype_delete', { 'id': entity.id }) }}">
                    <i class="glyphicon glyphicon-backward"></i> Supprimer
                </a>
            </div>
            <div class="btn btn-default">
                <a href="{{ path('mediatype') }}">
                    <i class="glyphicon glyphicon-backward"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
{% endblock %}
