{% extends '::base_admin.html.twig' %}
{% block h1 -%}
    <h1>Catégorie de média</h1>
{% endblock %}
{% block body -%}
    <table class="record_properties table table-hover" data-sort-name="name" data-sort-order="id">
        <tbody>
            <tr>
                <th data-field="id" data-align="right" data-sortable="true">Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th data-field="name" data-align="right" data-sortable="true">Nom</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th data-field="comment" data-align="right" data-sortable="true">Commentaire</th>
                <td>{{ entity.comment }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-toolbar">
        <div class="btn-group">
            <div class="btn btn-default">
                <a href="{{ path('mediacategory_edit', { 'id': entity.id }) }}">
                    <i class="glyphicon glyphicon-edit"></i> Editer
                </a>
            </div>
            <div class="btn btn-default">
                <a href="{{ path('mediacategory_delete', { 'id': entity.id }) }}">
                    <i class="glyphicon glyphicon-backward"></i> Supprimer
                </a>
            </div>
            <div class="btn btn-default">
                <a href="{{ path('mediacategory') }}">
                    <i class="glyphicon glyphicon-backward"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
{% endblock %}
