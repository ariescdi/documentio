<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %} | DocumentIO</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
            {% if app.session.get('theme') %}
                <link rel="stylesheet" href="{{ asset('css/override_color.css') }}" />
            {% else %}
                <script>genererCss({{ craue_setting('theme') }});</script>
            {% endif %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% include '::header.html.twig' %}
        <div class="container">
            <aside class="col-lg-3">
                {{ render(path('getbestmark',{'count':2})) }}
                {{ render(path('getlast')) }}
                <div class="panel  panel-primary">
                    <div class="panel-heading">
                        <h2>Horloge</h2>
                    </div>
                    <div class="panel-body">
                        {{ render(path('clock_display')) }}
                    </div>
                </div>
                {{ render(path('social_network')) }}
            </aside>
            <section class="col-lg-9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1>{% block h1 %}{% endblock %}</h1>
                    </div>
                    <div class="panel-body">
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </section>
        </div>
        {% include '::footer.html.twig' %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/main.js') }}"></script>
            <script type="text/javascript">{% include 'AppBundle:Site:App.js.twig' %}</script>
        {% endblock %}
    </body>
</html>
